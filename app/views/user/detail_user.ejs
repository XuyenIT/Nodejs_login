<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include('../layout/header'); %>
        <div class="container mt-3">
            <h2>Detail User</h2>
            <%if(userDetail){%>
                <form class="col-md-6">
                    <div class="mb-3 mt-3">
                        <label for="email">Email:</label>
                        <input readonly type="email" class="form-control" id="email" name="email"
                            value="<%=userDetail.email%>">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="fullName">FullName:</label>
                        <input readonly type="text" class="form-control" id="fullName" value="<%=userDetail.fullName%>"
                            name="fullName">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="address">Address:</label>
                        <input readonly type="text" class="form-control" id="address" value="<%=userDetail.address%>"
                            name="address">
                    </div>
                    <div class="mb-3">
                        <label for="age">Age:</label>
                        <input readonly type="number" class="form-control" id="age" value="<%=userDetail.age%>"
                            name="age">
                    </div>
                    <div class="mb-3">
                        <label for="role" class="me-3">Role:</label>
                        <input type="radio" name="role" checked />
                        <%if(userDetail.role==1){%>
                            <label for="admin" class="me-3">Admin</label>
                            <%}else{%>
                                <label for="user" class="me-3">User</label>
                                <%}%>
                    </div>
                </form>
                <%}%>

        </div>
        <%- include('../layout/footer'); %>
</body>

</html>